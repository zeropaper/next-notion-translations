{
  "name": "notion-cms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p dev:next dev:locales",
    "dev:locales": "nodemon -w ./product -w ./core -e locales.json -x 'npm run prebuild'",
    "dev:next": "next dev",
    "predev": "npm run prebuild",
    "prebuild": "ts-node --esm scripts/notion-translations.mts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/server": "^11.10.0",
    "@mantine/core": "^5.10.0",
    "@mantine/hooks": "^5.10.0",
    "@mantine/next": "^5.10.0",
    "@next/font": "13.1.1",
    "@notionhq/client": "^2.2.3",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "next": "13.1.1",
    "next-translate": "^1.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.4",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "deep-object-diff": "^1.1.9",
    "dotenv": "^16.0.3",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1"
  }
}
